{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gasnet Benchmark Dataset",
  "type": "object",
  "required": ["latency_us", "bandwidth_gbps"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name", "date", "contributor", "hardware"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "date": { "type": "string", "format": "date" },
        "contributor": { "type": "string", "minLength": 1 },
        "hardware": {
          "type": "object",
          "required": ["nodes", "network", "cpu"],
          "properties": {
            "nodes": { "type": "integer", "minimum": 1 },
            "network": { "type": "string", "minLength": 1 },
            "cpu": { "type": "string", "minLength": 1 },
            "accelerator": { "type": "string" },
            "topology": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "cluster": { "type": "string" },
    "fabric": { "type": "string" },
    "topology": { "type": "string" },
    "nodes": { "type": "integer", "minimum": 1 },
    "latency_us": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["size", "p50", "p95"],
        "properties": {
          "size": { "type": "string", "minLength": 1 },
          "p50": { "type": "number", "minimum": 0 },
          "p95": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "bandwidth_gbps": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["size", "gbps"],
        "properties": {
          "size": { "type": "string", "minLength": 1 },
          "gbps": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
